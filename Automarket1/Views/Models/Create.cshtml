@model Automarket1.Model

@{
    ViewData["Title"] = "Створити модель";
}

<h1>Створити модель</h1>

<h4>Модель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model1" class="control-label"></label>
                <input asp-for="Model1" class="form-control" />
                <span asp-validation-for="Model1" class="text-danger"></span>
            </div>
            <div>
            <p class="text-danger">@ViewData["ErrorMessage"]</p>
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
