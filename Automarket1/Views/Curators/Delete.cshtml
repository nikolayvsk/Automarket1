@model Automarket1.Curator

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <h4>Куратор</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sale.Id)
        </dd>
    </dl>
    <p>

    </p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Видалити" class="btn btn-danger" />
        <p>

        </p>
        <p>
        @Html.ActionLink("Повернутися до списку","Index", new {id = ViewBag.EmployeeId, name = ViewBag.EmployeeFullName}, new {@class = "btn btn-outline-primary"})
        </p>
    </form>
</div>
